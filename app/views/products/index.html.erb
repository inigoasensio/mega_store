<div class='large-12'>
  <div class='large-6 column'>
    <h2><%= params[:controller].titleize %></h2>
  </div>
  <hr>
</div>

<div class='large-12'>
  <%= render 'layouts/categories' %>

  <div class='large-9 columns'>
    <div class='row small-up-2 medium-up-2 large-up-4'>
      <% @products.each do |product| %>
        <div class='column'>
          <%= link_to product, class: 'thumbnail' do %>
            <%= image_tag(product.image.url) %>
          <% end %>
          <div class=''>
            <h4><%= product.name %></h4>
          </div>
          <div class=''>
            <%= render 'carts/add_to_cart', product: product, order_item: @order_item %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
