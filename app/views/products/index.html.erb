<div class='row column'>
  <h1><%= params[:controller].titleize %></h1>
  <hr>
</div>

<div class='row column'>
  <ul class='no-bullet'>
    <% @products.each do |product| %>
      <li class='large-3 medium-4 column'>
      <div class=''>
        <%= link_to product, class: 'thumbnail' do %>
          <%= image_tag(product.image.url) %>
        <% end %>
        <div class=''>
          <p><%= product.unit_price %><i class='fi-euro'></i></p>
        </div>
        <div class=''>
          <h4><%= product.name %></h4>
        </div>
        <div class=''>
          <a href='#' class='button expanded'>Buy</a>
        </div>
      </div>
      </li>
    <% end %>
  </ul>
</div>
