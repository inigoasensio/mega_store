<div class='large-12 row'>
  <div class='large-6 column'>
    <h1><%= params[:controller].titleize %></h1>
  </div>
  <hr>
</div>

<div class='row'>
  <%= render 'layouts/categories' %>

  <div class='small-up-1 medium-up-2 large-up-4 large-offset-1'>
  <% @products.each do |product| %>
    <div class='column'>
      <%= link_to product, class: 'thumbnail' do %>
        <%= image_tag(product.image.url) %>
      <% end %>
      <div class=''>
        <h4><%= product.name %></h4>
      </div>
      <div class=''>
        <%= render 'carts/add_to_cart', product: product, order_item: @order_item %>
      </div>
    </div>
  <% end %>
  </div>

</div>
