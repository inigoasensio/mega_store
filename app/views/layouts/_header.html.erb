<div class='row'>
  <nav class='top-bar'>

  <div class='top-bar-left'>
    <ul class='menu no-bullet'>
      <li class=''>
      <%= link_to authenticated_root_path do %>
        <i class='fi-shopping-cart'></i> <%= Rails.application.class.parent_name.titleize %>
      <% end %>
      </li>
      <li><%= link_to 'Products', products_path %></li>
      <li><%= link_to 'Orders', order_items_path %></li>
      <li><%= link_to 'Shipping', user_shipping_detail_path(current_user) %></li>
    </ul>
  </div>

  <div class='top-bar-right'>
    <ul class='menu'>
      <% if user_signed_in? %>
        <li class='dropmenu'>
          <ul class='dropdown menu' data-dropdown-menu>
            <li><%= link_to image_tag(current_user.avatar.url(:small), class: 'avatar'), user_path(current_user) %>
              <ul class='menu'>
                <li><%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %></li>
              </ul>
            </li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to 'Register', new_user_registration_path %></li>
        <li><%= link_to 'Login', new_user_session_path %></li>
      <% end %>
        <li><%= render 'layouts/cart_items' %></li>
    </ul>
  </div>

  </nav>
</div>
