<div class='large-12'>
  <div class='small-10 small-centered medium-8 large-6 columns'>
    <h2>Login</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'custom'}) do |f| %>
      <div class=''><%= f.email_field :email, autofocus: true, placeholder: "Email", class: '' %></div>

      <div class=''><%= f.password_field :password, autocomplete: 'off', placeholder: "Password", class: '' %></div>

      <% if devise_mapping.rememberable? -%>
        <div class='switch round small'>
          <%= f.check_box :remember_me, class: 'switch-input', id: 'rememberMe' %>
          <%= f.label :remember_me, class: 'switch-paddle', placeholder: '', for: 'rememberMe' %>
        </div>
      <% end -%>

      <div class=''><%= f.submit "Login", class: 'button' %></div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>
