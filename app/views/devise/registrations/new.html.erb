<div class='large-12'>
  <div class='small-10 small-centered medium-8 large-6 columns'>
    <h2>Register</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class=''><%= f.email_field :email, autofocus: true, placeholder: "Email", class: '' %></div>

      <div class=''><%= f.password_field :password, autocomplete: 'off', placeholder: "Password", class: '' %></div>

      <div class=''><%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: "Confirm password", class: '' %></div>

      <div><%= f.submit "Let's Go", class: 'button' %></div>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>
