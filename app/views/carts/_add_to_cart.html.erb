<div class=''>

  <div class=''>
    <%= form_for order_item, remote: true do |f| %>
      <h6 class=''><span style='color: green'><%= number_to_currency product.unit_price %></span></h6>
      <div class=''>
        <div class=''>
          <%= f.number_field :quantity, value: order_item.quantity.to_i, class: '', min: 1 %>

        </div>
        <div class=''>
          <div class=''>
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit "Add to Cart", class: 'button expanded' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
